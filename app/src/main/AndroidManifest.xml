<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flaggame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WrongAdvancedMode"
             android:theme="@style/AppTheme.Popup"/>
        <activity android:name=".GuessFlagTimer" />
        <activity
            android:name=".WrongPopupFlagMode"
            android:theme="@style/AppTheme.Popup" />
        <activity
            android:name=".wrong"
            android:theme="@style/AppTheme.Popup" />
        <activity android:name=".close" />
        <activity
            android:name=".correct"
            android:theme="@style/AppTheme.Popup" />
        <activity android:name=".AdvanceMode" />
        <activity android:name=".About" />
        <activity android:name=".GuessFlag" />
        <activity android:name=".guessCountry" />
        <activity android:name=".guessHint" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>